{
  "name": "runtypes",
  "version": "6.5.1",
  "description": "Runtime validation for static types",
  "main": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "files": [
    "lib/**/*.js",
    "lib/**/*.d.ts"
  ],
  "scripts": {
    "build": "tsc --pretty --project ./tsconfig.build.json",
    "format": "node scripts/format.js",
    "test": "jest",
    "test:ci": "CI=true jest --coverage --reporters=default --reporters=jest-github-actions-reporter",
    "coveralls": "cat ./coverage/lcov.info | ./node_modules/.bin/coveralls",
    "typecheck": "tsc --noEmit --watch",
    "prepare": "npm run build"
  },
  "author": "Thomas Crockett",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "26.0.22",
    "coveralls": "^3.1.0",
    "jest": "26.6.3",
    "jest-github-actions-reporter": "^1.0.3",
    "prettier": "^2.2.1",
    "ts-jest": "^26.5.4",
    "typescript": "4.5.2"
  },
  "keywords:": [
    "runtime",
    "type",
    "validation",
    "typescript"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/pelotom/runtypes"
  },
  "jest": {
    "verbose": false,
    "testRegex": ".*/*.spec.ts$",
    "moduleFileExtensions": [
      "js",
      "ts"
    ],
    "transform": {
      "\\.ts$": "ts-jest"
    },
    "testEnvironment": "node"
  },
  "dependencies": {},
  "packageManager": "yarn@1.22.19"
}

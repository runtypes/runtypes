{
  "name": "runtypes",
  "version": "0.1.4",
  "description": "Runtime type validation for (Java|Type)Script",
  "main": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "scripts": {
    "build": "tsc --pretty",
    "test": "npm run build && jest --verbose",
    "develop": "jest --watchAll",
    "release": "npm run release:patch",
    "release:patch": "xyz --increment patch",
    "release:minor": "xyz --increment minor",
    "release:major": "xyz --increment major"
  },
  "author": "Thomas Crockett",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^16.0.4",
    "jest": "^18.1.0",
    "ts-jest": "^18.0.2",
    "typescript": "^2.1.5",
    "xyz": "^2.1.0"
  },
  "keywords:": [
    "runtime",
    "type",
    "validation",
    "typescript"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/pelotom/runtypes"
  },
  "jest": {
    "verbose": false,
    "testRegex": ".*/*.spec.ts$",
    "moduleFileExtensions": [
      "js",
      "ts"
    ],
    "transform": {
      "\\.(ts|tsx)$": "<rootDir>/node_modules/ts-jest/preprocessor"
    },
    "testEnvironment": "node"
  }
}
